[user]
	name = Camden Cheek
	signingkey = ~/.ssh/id_github.pub

[init]
	defaultBranch = main

[http]
	cookiefile = /Users/ccheek/.gitcookies

[commit]
    gpgSign = true

[gpg]
    format = ssh

[pull]
	rebase = true
	prune = true

[fetch]
	prune = true

[fixup]
	commit = true

[rebase]
	autosquash = true

[log]
	date = local

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[alias]
	gone = ! "git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D"

[branch]
	sort = committerdate

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[include]
    path = config_personal

[includeIf "gitdir:~/src/sourcegraph"]
    path = config_work
[core]
	excludesFile = /Users/ccheek/.config/git/ignore
